<Window x:Class="Client.Views.Controls.InviteFriendDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invitar Amigo" Height="218" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1E1E1E" WindowStyle="None">

    <Border BorderBrush="#2196F3" BorderThickness="2" CornerRadius="5" Margin="5">
        <StackPanel VerticalAlignment="Center" Margin="20">
            <Label Content="INVITAR AMIGO" FontSize="18" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center"/>

            <Label Content="Ingresa el correo:" Foreground="White" Margin="0,10,0,0"/>
            <TextBox x:Name="TextBoxEmail" Height="30" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Enviar Correo" Click="ButtonSend_Click" 
                        Width="120" Height="35" Margin="5" Background="#2196F3" Foreground="White"/>
                <Button Content="Cancelar" Click="ButtonCancel_Click" 
                        Width="80" Height="35" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>