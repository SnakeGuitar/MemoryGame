<Window x:Class="Client.View.Session.WindowUserSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View.Session"
        mc:Ignorable="d"
        Title="WindowUserSelection" Height="500" Width="400">
    <Grid Background="#FFC30F45">
        <Grid.RowDefinitions>
            <RowDefinition Height="171*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <Label Content="User Selection" Margin="0,40,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" FontStyle="Italic" FontFamily="Yu Gothic" HorizontalAlignment="Center" Width="357" Background="{x:Null}" Foreground="White"/>
        <Rectangle HorizontalAlignment="Center" Height="275" Margin="0,166,0,0" Stroke="Black" VerticalAlignment="Top" Width="326" Fill="#FF231123" RadiusX="25.8" RadiusY="25.8" Grid.RowSpan="2"/>
        <Button Content="Guest" HorizontalAlignment="Center" Margin="0,312,0,0" VerticalAlignment="Top" Background="#FFC30F45" Foreground="White" BorderBrush="{x:Null}" FontFamily="Yu Gothic" Width="174" FontSize="16" Click="ButtonGuest"/>
        <Button Content="Sign In" HorizontalAlignment="Center" Margin="0,261,0,0" VerticalAlignment="Top" Background="#FFC30F45" Foreground="White" BorderBrush="{x:Null}" FontFamily="Yu Gothic" Width="174" FontSize="16" Click="ButtonSignIn"/>
    </Grid>
</Window>
