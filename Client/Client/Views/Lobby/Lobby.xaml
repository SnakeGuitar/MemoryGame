<Window x:Class="Client.Views.Lobby.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:Client.Properties.Langs"
        mc:Ignorable="d"
        Title="Lobby" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryTextColor}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="LobbyBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#33000000"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="MULTIPLAYER LOBBY" Style="{StaticResource MainMenuTitleStyle}" 
               Grid.Row="0" HorizontalAlignment="Center" FontSize="32"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Label Content="{x:Static lang:Lang.Lobby_Label_GameCode}" Foreground="White" FontSize="18" FontWeight="Bold"/>
            <Label x:Name="LabelLobbyCode" Content="----" Foreground="{StaticResource AccentColor}" FontSize="18" FontWeight="Bold" Margin="10,0,0,0"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="{x:Static lang:Lang.Global_Title_Players}" Style="{StaticResource MainMenuTitleStyle}" HorizontalAlignment="Center"/>

                <ListBox x:Name="PlayersListBox" Grid.Row="1" Style="{StaticResource LobbyBoxStyle}"/>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="{x:Static lang:Lang.Global_Title_Chat}" Style="{StaticResource MainMenuTitleStyle}" HorizontalAlignment="Center"/>

                <ListBox x:Name="ChatListBox" Grid.Row="1" Style="{StaticResource LobbyBoxStyle}"/>

                <Grid Grid.Row="2" Margin="5,10,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ChatTextBox" Height="35" VerticalContentAlignment="Center" Padding="5" FontSize="14"/>
                    <Button Content="{x:Static lang:Lang.Global_Button_Send}" Width="80" Height="35" Margin="10,0,0,0" Grid.Column="1"
                            Style="{StaticResource GameButtonStyle}" Click="ButtonSendMessageChat_Click"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ButtonBack" Content="{x:Static lang:Lang.Global_Button_Back}" 
                    Style="{StaticResource GameButtonStyle}" Width="150" Height="45"
                    Grid.Column="0" HorizontalAlignment="Left" Click="ButtonBackToMainMenu_Click"/>

            <Button x:Name="ButtonInvite" Content="{x:Static lang:Lang.Lobby_Button_Invite}" 
                    Style="{StaticResource GameButtonStyle}" Width="180" Height="45"
                    Grid.Column="1" HorizontalAlignment="Center" Click="ButtonInvite_Click"/>

            <Button x:Name="ButtonReady" Content="Ready" 
                    Style="{StaticResource GameButtonStyle}" Width="150" Height="45" Background="{StaticResource AccentColor}"
                    Grid.Column="2" HorizontalAlignment="Right" Click="ButtonReady_Click"/>
        </Grid>
    </Grid>
</Window>