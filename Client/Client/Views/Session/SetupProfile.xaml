<Window x:Class="Client.Views.Session.SetupProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Session"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        Title="SetupProfile" 
        MinHeight="600" MinWidth="500" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">

        <Grid HorizontalAlignment="Center" 
              VerticalAlignment="Center">

            <Viewbox Stretch="Uniform"
                     MaxWidth="1200" MaxHeight="1400">

                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Width="750" Margin="0,0,0,50">

                    <Label Content="{x:Static language:Lang.Global_Button_SetupProfile}" 
                           Style="{StaticResource TitleLabelStyle}"/>

                    <Border Background="{StaticResource AccentColor}" 
                            CornerRadius="15">

                        <StackPanel Margin="25" HorizontalAlignment="Center" VerticalAlignment="Center">

                            <Label Content="{x:Static language:Lang.SetupProfile_Label_SelectAvatar}" 
                                   Style="{StaticResource RegisterLabelStyle}"
                                   Margin="0,5,0,5"/>

                            <Grid HorizontalAlignment="Center" 
                                  Width="132" Height="120" Margin="0,5,0,0">

                                <Border BorderBrush="{StaticResource AccentForegroundColor}" 
                                        BorderThickness="2" 
                                        CornerRadius="10"/>

                                <Image Name="ProfilePicture" 
                                       Style="{StaticResource AvatarImageStyle}"
                                       Margin="2"/>

                                <Button Click="ButtonSelectAvatar_Click" 
                                        Style="{StaticResource AvatarButtonStyle}"/>
                            </Grid>

                            <Label Content="{x:Static language:Lang.Global_Label_EnterUsername}"
                                   x:Name="LabelEnterUsername"
                                   Style="{StaticResource RegisterLabelStyle}"/>

                            <TextBox x:Name="TextBoxUsername" 
                                     Style="{StaticResource RegisterTextBoxStyle}"/>

                            <Label x:Name="LabelUsernameError" 
                                   Style="{StaticResource RegisterErrorLabelStyle}"
                                   Content=""/>

                            <Button Content="{x:Static language:Lang.Global_Button_Accept}" 
                                    Style="{StaticResource FormPrimaryButtonStyle}"
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,0"
                                    Name="ButtonAcceptSetupProfile"
                                    Click="ButtonAcceptSetup_Click" />
                        </StackPanel>
                    </Border>

                    <Label x:Name="LabelEmail"
                           Style="{StaticResource SubTitleStyle}" Foreground="{StaticResource PrimaryTextColor}" 
                           Content="Email" Margin="0,20,0,0" HorizontalAlignment="Center" />
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</Window>