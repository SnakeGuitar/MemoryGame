    <Style x:Key="MainMenuTitleStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource TitleFont}"/>
        <Setter Property="FontSize" Value="55"/>
        <Setter Property="Foreground" Value="{StaticResource AccentForegroundColor}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,40"/>
    </Style>

    <Style x:Key="MessageBoxTitleStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource TitleFont}"/>
        <Setter Property="FontSize" Value="70"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
