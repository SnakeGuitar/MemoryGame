    <SolidColorBrush x:Key="AccentHoverColor" Color="#CC7722"/>
    <SolidColorBrush x:Key="AccentHoverColor2" Color="#B3661E"/>

    <SolidColorBrush x:Key="ErrorLabelColor" Color="#FFFFB3"/>

    <SolidColorBrush x:Key="EasyColor" Color="#B3DAB3"/>
