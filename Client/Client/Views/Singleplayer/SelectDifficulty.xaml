<Window x:Class="Client.Views.Singleplayer.SelectDifficulty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Singleplayer"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        Title="SelectDifficulty" 
        MinHeight="550" MinWidth="450" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">

        <Grid HorizontalAlignment="Center" 
              VerticalAlignment="Center"
              MaxWidth="900" 
              MaxHeight="1115"
              Margin="0,0,0,120">

            <Viewbox Stretch="Uniform">

                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    
                    <Label Content="{x:Static language:Lang.Global_Title_Singleplayer}" 
                           Style="{StaticResource TitleLabelStyle}" />
                    
                    <Label Content="{x:Static language:Lang.Global_Label_Difficulty}"
                           Style="{StaticResource SubTitleStyle}"/>
                    
                    <Border Background="{StaticResource AccentColor}" 
                            CornerRadius="15">

                        <StackPanel Margin="25">
                            
                            <Button Content="{x:Static language:Lang.SelectDifficulty_Button_Easy}" 
                                    Style="{StaticResource EasyButtonStyle}"
                                    Click="ButtonEasyDifficulty_Click"/>

                            <Button Content="{x:Static language:Lang.SelectDifficulty_Button_Normal}" 
                                    Style="{StaticResource NormalButtonStyle}"
                                    Click="ButtonNormalDifficulty_Click"/>

                            <Button Content="{x:Static language:Lang.SelectDifficulty_Button_Hard}" 
                                    Style="{StaticResource HardButtonStyle}"
                                    Click="ButtonHardDifficulty_Click"/>
                                
                        </StackPanel>
                    </Border>
                    
                    <Button Content="{x:Static language:Lang.Global_Button_Custom}" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="ButtonCustomizeDifficulty_Click"
                            Margin="0,25,0,0"/>

                    <Button Content="{x:Static language:Lang.Global_Button_Back}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Center" 
                            Margin="0,15,0,0"
                            Click="ButtonBackToMainMenu_Click" Width="248" />
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
    
</Window>
