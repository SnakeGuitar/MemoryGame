<Window x:Class="Client.Views.Singleplayer.CustomizeGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Singleplayer"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        Title="CustomizeGame" 
        MinHeight="600" MinWidth="500" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">

        <Grid HorizontalAlignment="Center" 
              VerticalAlignment="Center">

            <Viewbox Stretch="Uniform"
                     MaxWidth="1200" MaxHeight="1400">

                <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                            Width="700" Margin="0,0,0,50">

                    <Label Content="{x:Static language:Lang.Global_Title_Singleplayer}" 
                       Style="{StaticResource TitleLabelStyle}" />

                    <Label Content="{x:Static language:Lang.Global_Title_CustomDifficulty}" 
                       Style="{StaticResource SubTitleStyle}"/>

                    <Border Background="{StaticResource AccentColor}" 
                        CornerRadius="15">

                        <StackPanel Margin="25" HorizontalAlignment="Center" VerticalAlignment="Center">

                            <Label Content="{x:Static language:Lang.Global_Label_NumberOfCards}" 
                               Style="{StaticResource RegisterLabelStyle}" FontSize="40" FontWeight="Bold"/>

                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox x:Name="ComboBoxSelectNumberCards" 
                                      Grid.Column="0" FontSize="28" Width="70"
                                      Style="{StaticResource FormComboBoxStyle}">
                                    <ComboBoxItem Content="16"/>
                                    <ComboBoxItem Content="24"/>
                                    <ComboBoxItem Content="30"/>
                                    <ComboBoxItem Content="40"/>
                                </ComboBox>

                                <Label Content="{x:Static language:Lang.Global_Label_Cards}" 
                                   Grid.Column="1"
                                   Style="{StaticResource FormUnitLabelStyle}"/>
                            </Grid>

                            <Label Content="{x:Static language:Lang.Global_Label_TimerLimit}" FontSize="40" 
                               Style="{StaticResource RegisterLabelStyle}" Margin="0,35,0,0" FontWeight="Bold"/>

                            <Slider x:Name="TimerSlider" 
                                Style="{StaticResource FormSliderStyle}"
                                Minimum="30" Maximum="300" Value="180" Width="300"
                                IsSnapToTickEnabled="True" TickFrequency="15"
                                ValueChanged="TimerSlider_ValueChanged"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                <Label x:Name="LabelTimerValue" FontSize="28"
                                   Style="{StaticResource FormValueLabelStyle}"
                                   Content="180"/>
                                <Label Content="{x:Static language:Lang.Global_Label_Seconds}" 
                                   Style="{StaticResource FormUnitLabelStyle}"/>
                            </StackPanel>

                            <Button Content="{x:Static language:Lang.Global_Button_Play}" 
                                Style="{StaticResource FormPrimaryButtonStyle}"
                                HorizontalAlignment="Center" 
                                Margin="0,30,0,0"
                                Click="ButtonPlayGame_Click" />
                        </StackPanel>
                    </Border>

                    <Button Content="{x:Static language:Lang.Global_Button_Back}" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"
                        Click="ButtonBackToMainMenu_Click" />
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</Window>