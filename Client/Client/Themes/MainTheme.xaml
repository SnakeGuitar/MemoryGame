                            <Setter TargetName="buttonBorder" Property="Background" Value="{StaticResource HardHoverColor}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="RegisterTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource BodyFont}"/>
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <Style x:Key="RegisterPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="FontFamily" Value="{StaticResource BodyFont}"/>
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <Style x:Key="CodeTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource RegisterTextBoxStyle}">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="MaxLength" Value="6"/>
