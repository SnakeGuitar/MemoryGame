<Window x:Class="Client.Views.Multiplayer.MultiplayerMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Multiplayer"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        Title="MultiplayerMenu" 
        MinHeight="600" MinWidth="500" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">
        <Viewbox Stretch="Uniform" MaxWidth="1200" MaxHeight="1400">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="550" Margin="0,0,0,50">

                <Label Content="{x:Static language:Lang.Global_Title_Multiplayer}" 
                       Style="{StaticResource TitleLabelStyle}" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Border Background="{StaticResource AccentColor}" CornerRadius="15" Padding="30">
                    <StackPanel>

                        <TextBlock Text="CREATE NEW GAME" Foreground="White" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Opacity="0.9"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Game code will be automatically generated." Foreground="White" FontSize="12" Opacity="0.8"/>
                            </StackPanel>

                            <CheckBox x:Name="checkBoxIsPublic" 
                                      Grid.Column="1"
                                      Content="Public"
                                      Foreground="White"
                                      FontSize="14"
                                      Cursor="Hand"
                                      VerticalAlignment="Center"/>
                        </Grid>

                        <Button x:Name="ButtonCreateLobby" 
                                Content="{x:Static language:Lang.MultiplayerMenu_Button_CreateLobby}" 
                                Style="{StaticResource CreateLobbyButtonStyle}"
                                Height="45"
                                Click="ButtonCreateLobby_Click"/>

                        <Separator Background="White" Opacity="0.3" Margin="0,20,0,20"/>

                        <TextBlock Text="JOIN GAME" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,5" Opacity="0.7"/>

                        <Button Content="{x:Static language:Lang.Global_Button_Join}" 
                                Style="{StaticResource FormPrimaryButtonStyle}"
                                Background="#36454F" Foreground="White"
                                BorderBrush="White" BorderThickness="1"
                                Click="ButtonJoinLobby_Click"
                                Height="40"/>
                    </StackPanel>
                </Border>

                <Button Content="{x:Static language:Lang.Global_Button_Back}" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0"
                        Click="ButtonBackToMainMenu_Click" />
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>