<Window x:Class="Client.View.Game.WindowProfileSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View.Game"
        mc:Ignorable="d"
        Title="WindowProfileSetup" Height="500" Width="400">
    <Grid Background="#FFC30F45">
        <Rectangle HorizontalAlignment="Center" Height="302" Margin="0,157,0,0" VerticalAlignment="Top" Width="326" Fill="#FF231123" RadiusX="24.54" RadiusY="24.54"/>
        <Label Content="Welcome!" Margin="0,40,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Yu Gothic" HorizontalAlignment="Center" Width="326" Background="{x:Null}" Foreground="White" FontStyle="Italic" FontWeight="Bold"/>
        <TextBox x:Name="TextBoxLogInEmailInput" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="132" FontSize="16" Background="White" Height="29" Margin="205,337,0,0"/>
        <Image Name="ProfilePicture" Height="133" Margin="205,185,63,0" VerticalAlignment="Top"/>
        <Label Content="Enter an username" HorizontalAlignment="Left" Margin="71,339,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White"/>
        <Label Content="Select an avatar" HorizontalAlignment="Left" Margin="71,185,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" Width="117"/>
        <Button Content="Continue" HorizontalAlignment="Left" Margin="205,410,0,0" VerticalAlignment="Top" Background="#FFC30F45" Foreground="White" BorderBrush="{x:Null}" FontFamily="Yu Gothic" Width="132" FontSize="16" Click="ButtonSignIn"/>
    </Grid>
</Window>
