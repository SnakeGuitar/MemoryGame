<Window x:Class="Client.View.Game.WindowMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View.Game"
        mc:Ignorable="d"
        Title="WindowMainMenu" Height="720" Width="1080">
    <Grid Background="#FFC30F45">
        <Image Name="BackgroundImage" HorizontalAlignment="Left" Height="704" Margin="10,0,0,0" VerticalAlignment="Center" Width="1080" Stretch="UniformToFill"/>
        <Rectangle HorizontalAlignment="Left" Height="704" VerticalAlignment="Center" Width="308" Fill="#FF231123"/>
        <Button Content="Singleplayer" HorizontalAlignment="Left" Margin="49,180,0,0" VerticalAlignment="Top" Background="#FFC30F45" Foreground="White" BorderBrush="{x:Null}" FontFamily="Yu Gothic" Width="210" FontSize="20" FontStyle="Italic" Click="ButtonSingleplayer"/>
        <Rectangle Height="177" VerticalAlignment="Top" Fill="#FF231123" Margin="308,465,0,0"/>
        <Button Content="Multiplayer" HorizontalAlignment="Left" Margin="49,240,0,0" VerticalAlignment="Top" Background="#FFC30F45" Foreground="White" BorderBrush="{x:Null}" FontFamily="Yu Gothic" Width="210" FontSize="20" FontStyle="Italic" Click="ButtonMultiplayer"/>
        <Button Content="Options" HorizontalAlignment="Left" Margin="49,299,0,0" VerticalAlignment="Top" Background="#FFC30F45" Foreground="White" BorderBrush="{x:Null}" FontFamily="Yu Gothic" Width="210" FontSize="20" FontStyle="Italic" Click="ButtonOptions"/>
        <Rectangle Height="132" Stroke="Black" VerticalAlignment="Top" Fill="#FF701530" Margin="308,490,640,0"/>
        <Rectangle Height="132" Stroke="Black" VerticalAlignment="Top" Fill="#FF9B6776" Margin="456,490,492,0"/>
        <Rectangle Height="132" Stroke="Black" VerticalAlignment="Top" Fill="White" Margin="604,488,344,0"/>
        <Button Content="Gallery" HorizontalAlignment="Left" Margin="49,360,0,0" VerticalAlignment="Top" Background="#FFC30F45" Foreground="White" BorderBrush="{x:Null}" FontFamily="Yu Gothic" Width="210" FontSize="20" FontStyle="Italic" Click="ButtonGallery"/>
        <Label Content="Memory Game" HorizontalAlignment="Left" Margin="24,56,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Yu Gothic" Background="{x:Null}" FontStyle="Italic" Width="260" Height="60">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.394"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Button Content="Exit Game" HorizontalAlignment="Left" Margin="67,420,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontFamily="Yu Gothic" Width="174" Click="ButtonExitGame"/>
        <Rectangle Height="192" VerticalAlignment="Top" Margin="860,186,22,0" Fill="#FF701530"/>
        <Rectangle Height="44" Stroke="Black" VerticalAlignment="Top" Fill="#FF231123" Margin="860,399,22,0"/>
        <Image x:Name="ProfilePicture" HorizontalAlignment="Left" Height="192" Margin="860,186,0,0" VerticalAlignment="Top" Width="198" Stretch="UniformToFill"/>
        <Label x:Name="UsernameDisplay" Content="Username" HorizontalAlignment="Left" Margin="927,408,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White"/>
        <Image Name="FavouriteCardImage1" HorizontalAlignment="Left" Height="129" Margin="308,490,0,0" VerticalAlignment="Top" Width="131"/>
        <Image Name="FavouriteCardImage2" HorizontalAlignment="Left" Height="129" Margin="456,490,0,0" VerticalAlignment="Top" Width="131"/>
        <Image Name="FavouriteCardImage3" HorizontalAlignment="Left" Height="129" Margin="604,490,0,0" VerticalAlignment="Top" Width="131"/>
        <Button Content="" HorizontalAlignment="Left" Margin="860,186,0,0" VerticalAlignment="Top" Width="198" Height="192" Click="ButtonChangeProfilePicture" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}"/>
        <Button Content="" HorizontalAlignment="Left" Margin="308,490,0,0" VerticalAlignment="Top" Width="132" Height="132" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="ButtonChangeFavouriteCardImage1"/>
        <Button Content="" HorizontalAlignment="Left" Margin="456,490,0,0" VerticalAlignment="Top" Height="132" Width="132" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Click="ButtonChangeFavouriteCardImage2"/>
        <Button Content="" HorizontalAlignment="Left" Margin="604,490,0,0" VerticalAlignment="Top" Height="130" Width="132" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Click="ButtonChangeFavouriteCardImage3"/>
    </Grid>
</Window>
