<Window x:Class="Client.Views.Profile.PlayerProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Profile"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        Title="PlayerProfile" 
        MinHeight="600" MinWidth="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="CardLabelStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource BodyFont}"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CardValueStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource BodyFont}"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PrimaryTextColor}">

        <Viewbox Stretch="Uniform">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{StaticResource BackgroundColor}" 
                        CornerRadius="20" 
                        BorderBrush="{StaticResource AccentColor}" 
                        BorderThickness="5" Margin="0,70,0,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="1100" Height="Auto" Padding="45">

                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="10" Opacity="0.5"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,70,0">

                            <Border Width="260" Height="260" 
                                    BorderBrush="{StaticResource PrimaryTextColor}" 
                                    BorderThickness="3" CornerRadius="15"
                                    Margin="0,0,0,20">
                                <Border Name="AvatarDisplay" CornerRadius="12">
                                    <Border.Background>
                                        <ImageBrush x:Name="ImageAvatarBrush" Stretch="UniformToFill"/>
                                    </Border.Background>
                                    <Image x:Name="ImageAvatar" Stretch="UniformToFill"/>
                                </Border>
                            </Border>

                            <Button Content="{x:Static language:Lang.EditProfile_Label_EditProfile}" 
                                    Style="{StaticResource EasyButtonStyle}"
                                    Width="200" Margin="0,0,0,15"
                                    Click="ButtonEditProfile_Click"/>

                            <Button Content="{x:Static language:Lang.Global_Button_LogOut}"
                                    Style="{StaticResource HardButtonStyle}"
                                    Width="200" Foreground="{StaticResource AccentForegroundColor}"
                                    Click="ButtonCloseSession_Click"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">

                            <Viewbox Stretch="Uniform" HorizontalAlignment="Left" MaxWidth="680" Height="150">
                                <TextBlock x:Name="TextBlockUsername" FontSize="90"
                                           Text="Username"
                                           Style="{StaticResource TitleTextStyle}"
                                           TextWrapping="NoWrap"/>
                            </Viewbox>

                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Label Content="{x:Static language:Lang.PlayerProfile_Label_Name}" Style="{StaticResource CardLabelStyle}" FontSize="25"/>
                                <TextBlock x:Name="TextBlockFullName" Text="-" Style="{StaticResource CardValueStyle}" FontSize="25"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Label Content="{x:Static language:Lang.PlayerProfile_Label_Date}" Style="{StaticResource CardLabelStyle}" FontSize="25"/>
                                <TextBlock x:Name="TextDate" Text="-" Style="{StaticResource CardValueStyle}" FontSize="25"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Label Content="{x:Static language:Lang.PlayerProfile_Label_Email}" Style="{StaticResource CardLabelStyle}" FontSize="25"/>
                                <TextBlock x:Name="TextEmail" Text="-" Style="{StaticResource CardValueStyle}" FontSize="25"/>
                            </StackPanel>

                            <StackPanel Margin="0,10">
                                <Label Content="{x:Static language:Lang.PlayerProfile_Label_Social}" 
                                       Style="{StaticResource CardLabelStyle}" 
                                       HorizontalAlignment="Left" FontSize="25"/>

                                <ItemsControl x:Name="ItemsControlSocialNetworks" Margin="20,5,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <TextBlock Text="• " Style="{StaticResource CardValueStyle}" Margin="0,0,5,0"/>

                                                <TextBlock Text="{Binding Account}" Style="{StaticResource CardValueStyle}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,20,0,40">

                    <Button Content="{x:Static language:Lang.PlayerProfile_Button_Friends}" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Width="220" Margin="0,0,40,0"
                            Click="ButtonFriends_Click"/>

                    <Button Content="{x:Static language:Lang.PlayerProfile_Button_Statistics}" 
                            Style="{StaticResource MenuButtonStyle}"
                            Width="220" Margin="0,0,40,0"
                            Click="ButtonStats_Click"/>

                    <Button Content="{x:Static language:Lang.Global_Button_Back}" 
                            Style="{StaticResource ExitButtonStyle}" 
                            Width="220" Height="60"
                            Click="ButtonBack_Click"/>
                </StackPanel>

            </Grid>
        </Viewbox>
    </Grid>
</Window>