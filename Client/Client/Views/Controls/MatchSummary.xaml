<Window x:Class="Client.Views.Controls.MatchSummary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resultados de Partida" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}" WindowStyle="None">

    <Border BorderBrush="White" BorderThickness="2" CornerRadius="10" Margin="10">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label x:Name="LabelTitle" Content="PARTIDA FINALIZADA" 
                       FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>

                <TextBlock x:Name="TextBlockWinner" Text="Ganador: Player1" 
                           FontSize="18" Foreground="#FFD700" HorizontalAlignment="Center" Margin="0,10"/>

                <TextBlock x:Name="TextBlockScore" Text="Puntaje: 100" 
                           FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0,5" Width="151"/>

                <Button Content="Cerrar y Salir" Click="ButtonClose_Click" 
                        Width="150" Height="40" Margin="0,30,0,0"
                        Background="#FF5555" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>