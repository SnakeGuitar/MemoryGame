<Window x:Class="Client.Views.TitleScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        Title="TitleScreen" 
        MinHeight="600" MinWidth="500" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">

        <Grid HorizontalAlignment="Center" 
              VerticalAlignment="Center">

            <Viewbox Stretch="Uniform"
                     MaxWidth="1200" MaxHeight="1400">

                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Width="500" Margin="0,0,0,50">

                    <TextBlock Style="{StaticResource TitleTextStyle}"
                               Text="{x:Static language:Lang.TitleScreen_Label_Memorama}"/>

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0">

                        <Button Content="{x:Static language:Lang.Global_Button_Guest}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="ButtonLoginAsGuest_Click"/>

                        <Button Content="{x:Static language:Lang.Global_Button_LogIn}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="ButtonLogIn_Click"/>

                        <Button Content="{x:Static language:Lang.Global_Button_SignIn}"
                                Style="{StaticResource SecondaryButtonStyle}" Width="260"
                                Click="ButtonSignIn_Click" />

                        <Button Content="{x:Static language:Lang.Global_Button_Settings}"
                                Margin="0,30,0,0"
                                Style="{StaticResource SettingsButtonStyle}"
                                Click="ButtonSettings_Click" Width="200" Height="50"
                                FontSize="20"/>

                        <Button Content="{x:Static language:Lang.Global_Button_ExitGame}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="ButtonExitGame_Click" Width="200" Height="50"
                                FontSize="20"/>
                    </StackPanel>
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</Window>