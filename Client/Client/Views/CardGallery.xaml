<Window x:Class="Client.Views.CardGallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Client.Properties.Langs" 
        mc:Ignorable="d"
        Title="{x:Static p:Lang.Gallery_Title}" 
        MinHeight="720" MinWidth="1280" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="{x:Static p:Lang.Gallery_Collection}" 
               Style="{StaticResource TitleLabelStyle}" 
               Margin="0,20,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <ItemsControl Name="GalleryItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorderStyle}" 
                                Width="260" Height="340"
                                Margin="15"
                                MouseLeftButtonUp="Card_MouseLeftButtonUp"
                                ToolTip="{Binding Name}"
                                Cursor="Hand">
                            <Grid>
                                <Image Source="{Binding FullPath}" Stretch="Uniform"/>
                                <Label Content="{Binding DisplayCategory}" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentForegroundColor}"
                                       VerticalAlignment="Bottom" 
                                       HorizontalAlignment="Center"
                                       Background="#AA000000"
                                       Padding="5,2"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Grid.Row="2" 
                Content="{x:Static p:Lang.Gallery_Back}" 
                Style="{StaticResource SecondaryButtonStyle}" 
                HorizontalAlignment="Left" 
                Margin="30,10,0,30"
                Click="ButtonBack_Click"/>

        <Grid x:Name="ZoomOverlay" 
              Grid.RowSpan="3" 
              Visibility="Collapsed" 
              Background="#E6000000" 
              MouseLeftButtonUp="ZoomOverlay_Click">

            <Border BorderBrush="{StaticResource AccentColor}" 
                    BorderThickness="2" 
                    CornerRadius="15" 
                    Margin="50"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Background="White"
                    Padding="10">
                <Image x:Name="ZoomedImage" Stretch="Uniform"/>
            </Border>

            <TextBlock Text="{x:Static p:Lang.Gallery_CloseZoom}"
                       Style="{StaticResource TitleTextStyle}"
                       FontSize="30"
                       Foreground="White"
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       IsHitTestVisible="False"/>
        </Grid>
    </Grid>
</Window>