<Window x:Class="Client.Views.Lobby.HostLobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Lobby"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        Title="HostLobby" 
        MinHeight="720" MinWidth="1280" 
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid Background="{StaticResource BackgroundColor}">

        <Border Background="{StaticResource PrimaryTextColor}" CornerRadius="15" Margin="20" ClipToBounds="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="20,10,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="{x:Static language:Lang.Global_Title_Multiplayer}" 
                           Style="{StaticResource LobbyTitleStyle}" 
                           FontSize="48" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,0"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Label Content="{x:Static language:Lang.HostLobby_Label_GameCode}" 
                               Style="{StaticResource RegisterLabelStyle}" Margin="0"/>
                        
                        <Label Name="LabelGameCode" Content="XXXXXX" 
                               Foreground="White" FontWeight="Bold" 
                               FontFamily="{StaticResource BodyFont}" FontSize="24" 
                               VerticalAlignment="Center"/>
                        
                    </StackPanel>
                </Grid>

                <TabControl Grid.Row="1" Style="{StaticResource TabControlStyle}" Margin="0,10,0,10">

                    <TabItem Header="{x:Static language:Lang.Global_Title_Lobby}" Style="{StaticResource TabItemStyle}" Margin="-5,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Content="{x:Static language:Lang.Global_Title_Players}" Style="{StaticResource LobbyTitleStyle}"/>
                                <ListBox x:Name="PlayersListBox" 
                                         Style="{StaticResource LobbyListBoxStyle}" Grid.Row="1" Margin="5" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="PlayersListBox_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="{Binding Username}" 
                                                       Grid.Column="0"
                                                       FontFamily="{StaticResource BodyFont}" 
                                                       FontSize="18"
                                                       Padding="5,0,0,0"
                                                       Foreground="{StaticResource AccentForegroundColor}"/>
                                                <Label Grid.Column="1" 
                                                       FontFamily="{StaticResource BodyFont}"
                                                       FontSize="16" FontWeight="Bold">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="Content" Value="No Listo"/>
                                                            <Setter Property="Foreground" Value="{StaticResource AccentHoverColor}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsReady}" Value="True">
                                                                    <Setter Property="Content" Value="Listo"/>
                                                                    <Setter Property="Foreground" Value="#86C361"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>

                            <Grid Grid.Column="1" Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label Content="{x:Static language:Lang.Global_Title_Chat}" Style="{StaticResource LobbyTitleStyle}"/>
                                <ListBox x:Name="ChatListBox" Style="{StaticResource LobbyListBoxStyle}" Grid.Row="1" Margin="5" SelectionChanged="ChatListBox_SelectionChanged" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                                <Grid Grid.Row="2" VerticalAlignment="Bottom">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ChatTextBox" Style="{StaticResource ChatTextBoxStyle}" Grid.Column="0" Margin="5,5,5,5"/>
                                    <Button Content="{x:Static language:Lang.Global_Button_Send}" Style="{StaticResource SendButtonStyle}" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,5,0" Click="ButtonSendMessageToChat_Click"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <TabItem Header="{x:Static language:Lang.Global_Button_Settings}" Style="{StaticResource TabItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="10">
                                <Label Content="{x:Static language:Lang.HostLobby_Title_InviteFriends}" Style="{StaticResource LobbySubTitleStyle}"/>

                                <Border Style="{StaticResource QuadrantBorderStyle}">
                                    <StackPanel>
                                        <Label Content="{x:Static language:Lang.HostLobby_Label_EnterFriendEmail}" Style="{StaticResource RegisterLabelStyle}" HorizontalAlignment="Left" Margin="10,0,0,5"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="TextBoxFriendEmail" Style="{StaticResource ChatTextBoxStyle}" Grid.Column="0" />
                                            <Button Content="{x:Static language:Lang.HostLobby_Button_SendInvitation}" Style="{StaticResource SendButtonStyle}" Grid.Column="1" FontSize="16" Width="120" Click="ButtonSendInvitationToFriend_Click"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10">
                                <Label Content="{x:Static language:Lang.HostLobby_Title_GameSettings}" Style="{StaticResource LobbySubTitleStyle}"/>

                                <Border Style="{StaticResource QuadrantBorderStyle}">
                                    <StackPanel>
                                        <Label Content="{x:Static language:Lang.Global_Label_NumberOfCards}" Style="{StaticResource RegisterLabelStyle}"/>
                                        <ComboBox x:Name="ComboBoxNumberOfCards" Style="{StaticResource FormComboBoxStyle}" SelectionChanged="ComboBoxNumberOfCards_SelectionChanged"/>
                                        <Label Content="{x:Static language:Lang.HostLobby_Label_TimePerTurn}" Style="{StaticResource RegisterLabelStyle}"/>
                                        <Slider x:Name="SliderSecondsPerTurn" Style="{StaticResource FormSliderStyle}" ValueChanged="SliderSecondsPerTurn_ValueChanged"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Label x:Name="LabelTimerValue" Content="30" Style="{StaticResource FormValueLabelStyle}"/>
                                            <Label Content="{x:Static language:Lang.Global_Label_Seconds}" Style="{StaticResource FormUnitLabelStyle}"/>
                                        </StackPanel>
                                        <Label Content="Player" Style="{StaticResource RegisterLabelStyle}" 
                                               x:Name ="LabelPlayer1" Width="592"/>
                                        <Label Content="Player" Style="{StaticResource RegisterLabelStyle}"
                                               x:Name= "LabelPlayer3" Width="592"/>
                                        <Label Content="Player" Style="{StaticResource RegisterLabelStyle}" 
                                               x:Name ="LabelPlayer2" Width="592"/>
                                        <Label Content="Player" Style="{StaticResource RegisterLabelStyle}"
                                                  x:Name= "LabelPlayer4" Width="592"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                        </Grid>
                    </TabItem>

                </TabControl>

                <Border Grid.Row="2" Background="{StaticResource PrimaryTextColor}" Padding="10,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="{x:Static language:Lang.Global_Button_Back}" 
                                Style="{StaticResource MenuExitLobbyButtonStyle}" 
                                Grid.Column="0" HorizontalAlignment="Left" Margin="200,10,0,10"
                                Click="ButtonBackToMenu_Click"/>

                        <Button Content="{x:Static language:Lang.Global_Button_Play}" 
                                Style="{StaticResource PrimaryLobbyButtonStyle}" 
                                Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,200,10"
                                Click="ButtonStartMatch_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>