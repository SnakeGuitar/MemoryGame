<Window x:Class="Client.Views.CardGallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Client.Properties.Langs" 
        mc:Ignorable="d"
        
        Title="{x:Static p:Lang.Gallery_Title}" 
        MinHeight="500" MinWidth="600" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Center" MaxHeight="60" Margin="0,0,0,15">
                <Label Content="{x:Static p:Lang.Gallery_Collection}" 
                       Style="{StaticResource TitleLabelStyle}" 
                       Padding="0"/>
            </Viewbox>

            <Border Grid.Row="1" 
                    Background="{StaticResource PrimaryTextColor}" 
                    CornerRadius="15" 
                    BorderBrush="{StaticResource AccentColor}" 
                    BorderThickness="3"
                    Padding="10">

                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="5">

                    <ItemsControl Name="GalleryItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="200" Height="280" 
                                        CornerRadius="10"
                                        BorderBrush="{StaticResource AccentColor}"
                                        BorderThickness="2"
                                        Background="{StaticResource BackgroundColor}"
                                        Margin="10"
                                        Cursor="Hand"
                                        MouseLeftButtonUp="Card_MouseLeftButtonUp"
                                        ToolTip="{Binding Name}">

                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="4" Opacity="0.4"/>
                                    </Border.Effect>

                                    <Grid>
                                        <Border CornerRadius="8" ClipToBounds="True" Margin="2">
                                            <Image Source="{Binding FullPath}" Stretch="UniformToFill"/>
                                        </Border>

                                        <Border VerticalAlignment="Bottom" 
                                                Background="#CC000000" 
                                                CornerRadius="0,0,8,8"
                                                Height="35">
                                            <Label Content="{Binding DisplayCategory}" 
                                                   FontSize="16" 
                                                   FontFamily="{StaticResource BodyFont}"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource AccentForegroundColor}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Button Grid.Row="2" 
                    Content="{x:Static p:Lang.Gallery_Back}" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    HorizontalAlignment="Center" 
                    Width="180" Height="50" FontSize="22"
                    Margin="0,15,0,0"
                    Click="ButtonBack_Click"/>
        </Grid>

        <Grid x:Name="ZoomOverlay" 
              Visibility="Collapsed" 
              Background="#F2000000" 
              MouseLeftButtonUp="ZoomOverlay_Click">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="0" Margin="50">
                    <Border BorderBrush="{StaticResource AccentColor}" 
                            BorderThickness="3" 
                            CornerRadius="20" 
                            Background="White"
                            Padding="10">
                        <Image x:Name="ZoomedImage" Stretch="Uniform"/>
                    </Border>
                </Viewbox>

                <TextBlock Grid.Row="1" 
                           Text="{x:Static p:Lang.Gallery_CloseZoom}"
                           Style="{StaticResource TitleTextStyle}"
                           FontSize="30"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           IsHitTestVisible="False"/>
            </Grid>
        </Grid>
    </Grid>
</Window>