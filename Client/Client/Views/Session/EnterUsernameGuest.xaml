<Window x:Class="Client.Views.Session.EnterUsernameGuest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Session"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        Title="EnterUsernameGuest" 
        MinHeight="550" MinWidth="450" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">

        <Grid HorizontalAlignment="Center" 
              VerticalAlignment="Center"
              MaxWidth="520" 
              MaxHeight="640"
              Margin="0,0,0,120">

            <Viewbox Stretch="Uniform">

                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center">

                    <Label Content="{x:Static language:Lang.Global_Button_Guest}" 
                           Style="{StaticResource TitleLabelStyle}" />

                    <Border Background="{StaticResource AccentColor}" 
                            CornerRadius="15">

                        <StackPanel Margin="25" HorizontalAlignment="Center" VerticalAlignment="Center">

                            <Label Content="{x:Static language:Lang.Global_Label_EnterUsername}" 
                                   Style="{StaticResource RegisterLabelStyle}"/>

                            <TextBox x:Name="TextBoxUsername" 
                                     Style="{StaticResource RegisterTextBoxStyle}"/>

                            <Label x:Name="LabelUsernameError" 
                                   Style="{StaticResource RegisterErrorLabelStyle}"
                                   Content=""/>

                            <Button Content="{x:Static language:Lang.Global_Button_Accept}" 
                                    Style="{StaticResource FormPrimaryButtonStyle}"
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,0"
                                    Name="ButtonAcceptUsernameGuest"
                                    Click="ButtonAcceptUsernameGuest_Click" />
                        </StackPanel>
                    </Border>

                    <Button Content="{x:Static language:Lang.Global_Button_Back}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Center" 
                            Margin="0,15,0,0"
                            Click="ButtonBackToTitleScreen_Click" />
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
