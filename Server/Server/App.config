<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
	<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

	<appSettings>
		<add key="EmailSender" value="mail" />
		<add key="EmailPassword" value="password app" />
		<add key="EmailHost" value="smtp.gmail.com" />
		<add key="EmailPort" value="587" />
	</appSettings>
	
	<log4net>
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="Logs\ServerLog.txt" />
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="5" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
		</appender>
		<root>
			<level value="DEBUG" />
			<appender-ref ref="RollingFileAppender" />
		</root>
	</log4net>
	
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
	
  <system.serviceModel>
	  
	  <!-- PARA EL HOTSPOT-->
	  <bindings>
		  <netTcpBinding>
			  <binding name="SecureBinding"
					   maxBufferPoolSize="52428800"
					   maxBufferSize="52428800"
					   maxReceivedMessageSize="52428800"
					   portSharingEnabled="false"
					   closeTimeout="00:00:15"
					   openTimeout="00:00:15"
					   receiveTimeout="00:30:00"
					   sendTimeout="00:01:00">

				  <security mode="None">
					  <transport sslProtocols="None"/>
				  </security>

				  <readerQuotas maxDepth="32"
								maxStringContentLength="8192000"
								maxArrayLength="52428800"
								maxBytesPerRead="4096"
								maxNameTableCharCount="16384" />
				  
				  <reliableSession enabled="true" inactivityTimeout="00:30:00" />
			  </binding>
		  </netTcpBinding>
	  </bindings>
	  
    <behaviors>
      <serviceBehaviors>
        <behavior name="ThrottledBehavior">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
			<serviceThrottling maxConcurrentCalls="100" 
							   maxConcurrentSessions="200" 
							   maxConcurrentInstances="100" />
        </behavior>
	  </serviceBehaviors>
	</behaviors>
	  
    <services>
		<service behaviorConfiguration="ThrottledBehavior" name="Server.SessionService.UserService">
			<endpoint address="" 
					  binding="netTcpBinding" 
					  bindingConfiguration="SecureBinding" 
					  contract="Server.SessionService.IUserService" />

			<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />

			<host>
				<baseAddresses>
					<add baseAddress="http://localhost:52000" />
					<add baseAddress="net.tcp://0.0.0.0:52001" />
				</baseAddresses>
			</host>
		</service>

		<service behaviorConfiguration="ThrottledBehavior" name="Server.LobbyService.GameLobbyService">
			<endpoint address="" 
					  binding="netTcpBinding" 
					  bindingConfiguration="SecureBinding" 
					  contract="Server.LobbyService.IGameLobbyService" />
			
			<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
			
			<host>
				<baseAddresses>
					<add baseAddress="http://localhost:53000" />
					<add baseAddress="net.tcp://0.0.0.0:53001" />
				</baseAddresses>
			</host>
		</service>
    </services>
	  
	  <diagnostics>
		  <messageLogging logEntireMessage="true" logMessagesAtServiceLevel="true" logMessagesAtTransportLevel="true" maxMessagesToLog="3000" />
	  </diagnostics>
	  
  </system.serviceModel>
	
  <connectionStrings>
	  <add name="memoryGameDBEntities" 
		   connectionString="metadata=res://*/MemoryGame.csdl|res://*/MemoryGame.ssdl|res://*/MemoryGame.msl;provider=System.Data.SqlClient;provider connection string=&quot;data source=localhost\SQLEXPRESS;initial catalog=memoryGame;integrated security=True;trustservercertificate=True;MultipleActiveResultSets=True;App=EntityFramework&quot;" 
		   providerName="System.Data.EntityClient" />
  </connectionStrings>
	
	<entityFramework>
		<providers>
			<provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
		</providers>
	</entityFramework>
</configuration>