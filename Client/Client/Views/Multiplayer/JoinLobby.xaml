<Window x:Class="Client.Views.Multiplayer.JoinLobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Multiplayer"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        Title="JoinLobby" 
        MinHeight="600" MinWidth="500" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">

        <Grid HorizontalAlignment="Center" 
              VerticalAlignment="Center">

            <Viewbox Stretch="Uniform"
                     MaxWidth="1200" MaxHeight="1400">

                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Width="500" Margin="0,0,0,50">

                    <Label Content="{x:Static language:Lang.Global_Button_Join}" 
                           Style="{StaticResource TitleLabelStyle}" />

                    <Border Background="{StaticResource AccentColor}" 
                            CornerRadius="15">

                        <StackPanel Margin="25" HorizontalAlignment="Center" VerticalAlignment="Center">

                            <Label Content="{x:Static language:Lang.Global_Label_EnterCode}" 
                                   Style="{StaticResource RegisterLabelStyle}"/>

                            <TextBox x:Name="TextBoxLobbyCode" 
                                     Style="{StaticResource CodeTextBoxStyle}"
                                     PreviewTextInput="NumericOnly_PreviewTextInput"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"/>

                            <Label x:Name="LabelCodeError" 
                                   Style="{StaticResource RegisterErrorLabelStyle}"
                                   Content=""/>

                            <Button Content="{x:Static language:Lang.Global_Button_Accept}" 
                                    Style="{StaticResource FormPrimaryButtonStyle}"
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,0"
                                    Click="ButtonAcceptCode_Click" />
                        </StackPanel>
                    </Border>

                    <Button Content="{x:Static language:Lang.Global_Button_Back}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Center" 
                            Margin="0,15,0,0"
                            Click="ButtonBackToMainMenu_Click" />
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
