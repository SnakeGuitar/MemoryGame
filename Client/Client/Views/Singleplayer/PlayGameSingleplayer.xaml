<Window x:Class="Client.Views.Singleplayer.PlayGameSingleplayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Singleplayer"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        MinHeight="600" MinWidth="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="GameBoardStyle" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="{Binding GameRows}" Columns="{Binding GameColumns}"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Viewbox Stretch="Uniform">
                                <Grid Width="200" Height="280">
                                    <Button Click="Card_Click" 
                                            DataContext="{Binding}"
                                            Width="200" Height="280"
                                            Background="Transparent" 
                                            BorderThickness="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="CardBorder" CornerRadius="15" BorderThickness="2" Background="{StaticResource AccentColor}">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="8" Opacity="0.8" BlurRadius="7"/>
                                                    </Border.Effect>
                                                    <Grid>
                                                        <Border x:Name="Img_Back" CornerRadius="13" Background="Transparent">
                                                            <Border.Clip>
                                                                <RectangleGeometry Rect="0,0,200,280" RadiusX="13" RadiusY="13"/>
                                                            </Border.Clip>
                                                            <Image Source="/Client;component/Resources/Images/Cards/Backs/default.png" Stretch="UniformToFill"/>
                                                        </Border>
                                                        <Border x:Name="Img_Front" CornerRadius="13" Visibility="Hidden" Background="Transparent">
                                                            <Border.Clip>
                                                                <RectangleGeometry Rect="0,0,200,280" RadiusX="13" RadiusY="13"/>
                                                            </Border.Clip>
                                                            <Image Source="{Binding DisplayImage}" Stretch="UniformToFill"/>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                                        <Setter TargetName="Img_Back" Property="Visibility" Value="Hidden"/>
                                                        <Setter TargetName="Img_Front" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="CardBorder" Property="Background" Value="Transparent"/>
                                                        <Setter TargetName="CardBorder" Property="BorderThickness" Value="0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMatched}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Viewbox>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource GreenGame}">

        <Viewbox Stretch="Uniform">

            <Grid Width="1450" Height="900">

                <Border Background="{StaticResource PrimaryTextColor}" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="10">
                            <Border Style="{StaticResource BoardContainerStyle}">
                                <ItemsControl x:Name="GameBoard" Style="{StaticResource GameBoardStyle}"/>
                            </Border>
                        </Grid>

                        <Grid Grid.Column="1" Margin="20,10,10,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,20,0,0">

                                <Border Style="{StaticResource BoardContainerStyle}" Margin="0,0,0,30" Padding="20">
                                    <StackPanel>
                                        <Label Content="{x:Static language:Lang.Global_Label_Time}" 
                                               Style="{StaticResource GameStatTitleStyle}" 
                                               FontSize="30" HorizontalAlignment="Center"/>

                                        <Label x:Name="LabelTimer" Content="00:00" 
                                               Style="{StaticResource GameStatValueStyle}" 
                                               FontSize="40" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource BoardContainerStyle}" Margin="0" Padding="20">
                                    <StackPanel>
                                        <Label Content="{x:Static language:Lang.Global_Label_Score}" 
                                               Style="{StaticResource GameStatTitleStyle}" 
                                               FontSize="30" HorizontalAlignment="Center"/>

                                        <Label x:Name="LabelScore" Content="0" 
                                               Style="{StaticResource GameStatValueStyle}" 
                                               FontSize="40" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Row="2" VerticalAlignment="Bottom" Margin="0,0,0,20">

                                <Button Content="{x:Static language:Lang.Global_Button_Settings}" 
                                        Style="{StaticResource GameButtonStyle}"
                                        Height="70" FontSize="26" Margin="0,0,0,20"
                                        Click="ButtonSettings_Click"/>

                                <Button Content="{x:Static language:Lang.Global_Button_Leave}" 
                                        Style="{StaticResource GameButtonStyle}"
                                        Height="70" FontSize="26"
                                        Click="ButtonLeaveGame_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Viewbox>
    </Grid>
</Window>