<Window x:Class="Client.Views.Lobby.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:Client.Properties.Langs"
        mc:Ignorable="d"
        Title="Lobby" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryTextColor}"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,10,20,0">
            <Label Content="LOBBY" Style="{StaticResource LobbyTitleStyle}" 
                   HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Label Content="{x:Static lang:Lang.Lobby_Label_GameCode}" 
                       Style="{StaticResource SubTitleStyle}" 
                       Foreground="{StaticResource AccentForegroundColor}"
                       FontSize="24" Margin="0,0,10,0"/>
                <Label x:Name="LabelLobbyCode" Content="000000" 
                       Style="{StaticResource SubTitleStyle}" 
                       Foreground="{StaticResource AccentForegroundColor}"
                       FontSize="24" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="{x:Static lang:Lang.Global_Title_Players}" 
                       Style="{StaticResource LobbySubTitleStyle}"/>

                <Border Grid.Row="1" Style="{StaticResource QuadrantBorderStyle}">
                    <ListBox x:Name="PlayersListBox" Style="{StaticResource LobbyListBoxStyle}"/>
                </Border>
            </Grid>

            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="{x:Static lang:Lang.Global_Title_Chat}" 
                       Style="{StaticResource LobbySubTitleStyle}"/>

                <Border Grid.Row="1" Style="{StaticResource QuadrantBorderStyle}">
                    <ListBox x:Name="ChatListBox" Style="{StaticResource LobbyListBoxStyle}"/>
                </Border>

                <Grid Grid.Row="2" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="ChatTextBox" Style="{StaticResource ChatTextBoxStyle}"/>

                    <Button Content="{x:Static lang:Lang.Global_Button_Send}" 
                            Style="{StaticResource SendButtonStyle}" 
                            Grid.Column="1" Click="ButtonSendMessageChat_Click"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Margin="40,0,40,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ButtonBack" 
                    Content="{x:Static lang:Lang.Global_Button_Back}" 
                    Style="{StaticResource MenuExitLobbyButtonStyle}"
                    Grid.Column="0" Click="ButtonBackToMainMenu_Click"/>

            <Button x:Name="ButtonInvite" 
                    Content="Invite Friend" 
                    Style="{StaticResource MenuExitLobbyButtonStyle}"
                    Grid.Column="1" HorizontalAlignment="Center" Click="ButtonInvite_Click"/>

            <Button x:Name="ButtonReady" 
                    Content="Ready" 
                    Style="{StaticResource PrimaryLobbyButtonStyle}"
                    Grid.Column="2" Click="ButtonReady_Click"/>
        </Grid>
    </Grid>
</Window>