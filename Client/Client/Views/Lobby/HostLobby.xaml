<Window x:Class="Client.Views.Lobby.HostLobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:Client.Properties.Langs"
        mc:Ignorable="d"
        
        Title="Host Lobby" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryTextColor}"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,10,20,0">
            <Label Content="MULTIPLAYER" Style="{StaticResource LobbyTitleStyle}" 
                   HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Label Content="{x:Static lang:Lang.HostLobby_Label_GameCode}" 
                       Style="{StaticResource SubTitleStyle}" 
                       Foreground="{StaticResource AccentForegroundColor}"
                       FontSize="24" Margin="0,0,10,0"/>
                <Label x:Name="LabelGameCode" Content="000000" 
                       Style="{StaticResource SubTitleStyle}" 
                       Foreground="{StaticResource AccentForegroundColor}"
                       FontSize="24" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <TabControl Grid.Row="1" Style="{StaticResource TabControlStyle}">

            <TabItem Header="{x:Static lang:Lang.Global_Title_Lobby}" 
                     Style="{StaticResource TabItemStyle}" 
                     FontSize="28">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Content="{x:Static lang:Lang.Global_Title_Players}" 
                               Style="{StaticResource LobbySubTitleStyle}"/>

                        <Border Grid.Row="1" Style="{StaticResource QuadrantBorderStyle}">
                            <ListBox x:Name="PlayersListBox" Style="{StaticResource LobbyListBoxStyle}"/>
                        </Border>
                    </Grid>

                    <Grid Grid.Column="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Content="{x:Static lang:Lang.Global_Title_Chat}" 
                               Style="{StaticResource LobbySubTitleStyle}"/>

                        <Border Grid.Row="1" Style="{StaticResource QuadrantBorderStyle}">
                            <ListBox x:Name="ChatListBox" Style="{StaticResource LobbyListBoxStyle}"/>
                        </Border>

                        <Grid Grid.Row="2" Margin="10,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="ChatTextBox" Style="{StaticResource ChatTextBoxStyle}"/>

                            <Button Content="{x:Static lang:Lang.Global_Button_Send}" 
                                    Style="{StaticResource SendButtonStyle}" 
                                    Grid.Column="1" Click="ButtonSendMessageToChat_Click"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="{x:Static lang:Lang.Global_Button_Settings}" 
                     Style="{StaticResource TabItemStyle}"
                     FontSize="28">
                <Grid>
                    <Border Style="{StaticResource QuadrantBorderStyle}" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Width="500" Height="400">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                            <Label Content="{x:Static lang:Lang.Global_Label_NumberOfCards}" 
                                   Style="{StaticResource RegisterLabelStyle}" FontSize="35"/>

                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox x:Name="ComboBoxNumberOfCards" Grid.Column="0" FontSize="28" Width="70" 
                                          Style="{StaticResource FormComboBoxStyle}">
                                    <ComboBoxItem Content="16"/>
                                    <ComboBoxItem Content="20"/>
                                    <ComboBoxItem Content="24"/>
                                    <ComboBoxItem Content="30"/>
                                    <ComboBoxItem Content="36"/>
                                </ComboBox>

                                <Label Content="{x:Static lang:Lang.Global_Label_Cards}" 
                                       Grid.Column="1"
                                       Style="{StaticResource FormUnitLabelStyle}"/>
                            </Grid>

                            <Label Content="{x:Static lang:Lang.Global_Label_TimerLimit}" 
                                   Style="{StaticResource RegisterLabelStyle}" Margin="0, 35,0,0" FontSize="35"/>

                            <Slider x:Name="SliderSecondsPerTurn" 
                                    Style="{StaticResource FormSliderStyle}"
                                    Minimum="30" Maximum="60" Value="30" 
                                    IsSnapToTickEnabled="True" TickFrequency="15"
                                    ValueChanged="TimerSlider_ValueChanged"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                <Label x:Name="LabelTimerValue" FontSize="28" 
                                       Style="{StaticResource FormValueLabelStyle}"
                                       Content="30"/>
                                <Label Content="{x:Static lang:Lang.Global_Label_Seconds}" 
                                       Style="{StaticResource FormUnitLabelStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="2" Margin="40,0,40,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ButtonBack" 
                    Content="{x:Static lang:Lang.Global_Button_Back}" 
                    Style="{StaticResource MenuExitLobbyButtonStyle}"
                    Grid.Column="0" Click="ButtonBackToMenu_Click"/>

            <Button x:Name="ButtonStart" 
                    Content="{x:Static lang:Lang.Global_Button_Play}" 
                    Style="{StaticResource PrimaryLobbyButtonStyle}"
                    Grid.Column="2" Click="ButtonStartMatch_Click"/>
        </Grid>
    </Grid>
</Window>