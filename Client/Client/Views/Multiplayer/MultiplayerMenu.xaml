<Window x:Class="Client.Views.Multiplayer.MultiplayerMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Multiplayer"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        Title="MultiplayerMenu" 
        
        MinHeight="600" MinWidth="500" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">

        <Grid HorizontalAlignment="Center" 
              VerticalAlignment="Center">

            <Viewbox Stretch="Uniform" MaxWidth="1200" MaxHeight="1400">

                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Width="700" Margin="0,0,0,50">

                    <Label Content="{x:Static language:Lang.Global_Title_Multiplayer}" 
                           Style="{StaticResource TitleLabelStyle}"/>

                    <Border Background="{StaticResource AccentColor}" 
                            CornerRadius="15">

                        <StackPanel Margin="30">

                            <TextBlock Text="{x:Static language:Lang.MultiplayerMenu_Label_CreateGame}" 
                                       Style="{StaticResource MessageBoxTextStyle}" 
                                       FontSize="28" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Static language:Lang.MultiplayerMenu_Label_AutoCodeGeneration}" 
                                               FontFamily="{StaticResource BodyFont}"
                                               Foreground="{StaticResource AccentForegroundColor}" 
                                               FontSize="16" 
                                               Opacity="0.9"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <CheckBox x:Name="checkBoxIsPublic" 
                                          Grid.Column="1"
                                          Content="{x:Static language:Lang.MultiplayerMenu_CheckBox_Public}"
                                          Style="{StaticResource FormCheckBoxStyle}"
                                          Width="Auto"
                                          Margin="20,0,0,0"
                                          VerticalAlignment="Center"/>
                            </Grid>

                            <Button x:Name="ButtonCreateLobby" 
                                    Content="{x:Static language:Lang.MultiplayerMenu_Button_CreateLobby}" 
                                    Style="{StaticResource CreateLobbyButtonStyle}"
                                    Width="300"
                                    Height="55"
                                    Click="ButtonCreateLobby_Click"/>

                            <Separator Background="{StaticResource AccentForegroundColor}" 
                                       Opacity="0.4" 
                                       Margin="20,25,20,25"/>

                            <TextBlock Text="{x:Static language:Lang.MultiplayerMenu_Label_JoinGame}" 
                                       Style="{StaticResource MessageBoxTextStyle}" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"
                                       Opacity="0.9"/>

                            <Button Content="{x:Static language:Lang.Global_Button_Join}" 
                                    Style="{StaticResource FormPrimaryButtonStyle}"
                                    Width="250"
                                    Height="50"
                                    Click="ButtonJoinLobby_Click"/>
                        </StackPanel>
                    </Border>

                    <Button Content="{x:Static language:Lang.Global_Button_Back}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Center" 
                            Margin="0,25,0,0"
                            Width="248"
                            Click="ButtonBackToMainMenu_Click" />
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</Window>