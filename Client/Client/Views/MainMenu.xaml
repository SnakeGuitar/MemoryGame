<Window x:Class="Client.Views.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        mc:Ignorable="d"
        Title="MainMenu" 
        MinHeight="700" MinWidth="1280" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">

            <Image Name="BackgroundImage"
                   Source="/Client;component/Resources/Images/Backgrounds/mainMenu.png"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Stretch="UniformToFill"/>

            <Border Background="#4C36454F" CornerRadius="10" Padding="15" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30"
                    MaxWidth="200">

                <StackPanel>
                    <Grid HorizontalAlignment="Center" Width="128" Height="128">
                        <Border BorderBrush="{StaticResource AccentForegroundColor}" BorderThickness="2" CornerRadius="5"/>
                        <Image Name="ProfilePicture" Stretch="UniformToFill" Margin="2"/>
                        <Button Style="{StaticResource AvatarButtonStyle}"/>
                    </Grid>

                    <Label x:Name="UsernameDisplay" Content="Username" 
                           Style="{StaticResource RegisterLabelStyle}"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Column="0" Background="{StaticResource PrimaryTextColor}">

            <StackPanel VerticalAlignment="Center" Margin="20">

                <TextBlock Text="{x:Static language:Lang.TitleScreen_Label_Memorama}" 
                           FontFamily="{StaticResource TitleFont}"
                           FontSize="70"
                           Foreground="{StaticResource AccentForegroundColor}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap" 
                           Margin="0,0,0,50"/>

                <Button Content="{x:Static language:Lang.Global_Title_Singleplayer}" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="ButtonSingleplayer_Click"/>

                <Button Content="{x:Static language:Lang.Global_Title_Multiplayer}" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="ButtonMultiplayer_Click"/>

                <Button Content="{x:Static language:Lang.Global_Button_Settings}" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="ButtonSettings_Click"/>

                <Button Content="{x:Static language:Lang.MainMenu_Button_Gallery}" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="ButtonGallery_Click"/>
                <Button Content="Friends" 
        Click="ButtonFriends_Click" 
        Height="50" 
        Width="250" 
        Margin="0,10,0,0" 
        FontSize="18" 
        FontWeight="Bold"
        Background="#4CAF50" 
        Foreground="White"
        BorderThickness="0"/>

                <Button Content="Statistics" 
        Click="ButtonStats_Click" 
        Height="50" 
        Width="250" 
        Margin="0,10,0,0" 
        FontSize="18" 
        FontWeight="Bold"
        Background="#2196F3" 
        Foreground="White"
        BorderThickness="0"/>

                <Button Content="My Profile" 
        Click="ButtonProfile_Click" 
        Height="50" 
        Width="250" 
        Margin="0,10,0,0" 
        FontSize="18" 
        FontWeight="Bold"
        Background="#9C27B0" 
        Foreground="White"
        BorderThickness="0"/>


                <Button Content="{x:Static language:Lang.MainMenu_Button_ExitGame}" 
                        Style="{StaticResource ExitButtonStyle}"
                        Click="ButtonExitGame_Click"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>
