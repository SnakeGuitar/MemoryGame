<Window x:Class="Client.Views.Social.FriendsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Client.Properties.Langs"
        
        Title="Friends" 
        MinHeight="720" MinWidth="1280"
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundColor}">

        <Viewbox Stretch="Uniform">

            <Grid Width="1450" Height="900">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Content="{x:Static language:Lang.Friends_Label_Friends}" 
                       Style="{StaticResource TitleLabelStyle}"
                       Margin="0,20,0,10"/>

                <Border Grid.Row="1" 
                        Background="{StaticResource PrimaryTextColor}" 
                        CornerRadius="20"
                        BorderThickness="5"
                        Margin="50,10,50,20">

                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TabControl Grid.Row="1" 
                                    Style="{StaticResource TabControlStyle}" 
                                    Background="Transparent" 
                                    BorderThickness="0">

                            <TabItem Header="{x:Static language:Lang.Friends_Label_MyFriends}"
                                     FontSize="30" Style="{StaticResource TabItemStyle}">

                                <Grid Margin="20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" 
                                            Background="#10000000" 
                                            CornerRadius="10" 
                                            BorderBrush="{StaticResource AccentForegroundColor}" 
                                            BorderThickness="1"
                                            Margin="0,0,0,20">

                                        <DataGrid x:Name="DataGridFriends" 
                                                  AutoGenerateColumns="False" 
                                                  IsReadOnly="True" 
                                                  Background="Transparent" 
                                                  BorderThickness="0"
                                                  HeadersVisibility="Column"
                                                  GridLinesVisibility="Horizontal"
                                                  RowBackground="Transparent"
                                                  AlternatingRowBackground="#05000000">

                                            <DataGrid.Resources>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="FontFamily" Value="{StaticResource BodyFont}"/>
                                                    <Setter Property="FontSize" Value="30"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                    <Setter Property="Foreground" Value="{StaticResource AccentForegroundColor}"/>
                                                    <Setter Property="Padding" Value="10"/>
                                                </Style>

                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="Padding" Value="10"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="DataGridCell">
                                                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                                    <ContentPresenter VerticalAlignment="Center" />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </DataGrid.Resources>

                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Header="{x:Static language:Lang.Global_Label_Avatar}" Width="180">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border Width="120" Height="120" CornerRadius="15">
                                                                <Border.Background>
                                                                    <ImageBrush ImageSource="{Binding AvatarImage}" Stretch="UniformToFill"/>
                                                                </Border.Background>
                                                            </Border>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTextColumn Header="{x:Static language:Lang.Global_Label_Username}" 
                                                                    Binding="{Binding Username}" Foreground="{StaticResource BackgroundColor}"
                                                                    FontSize="50" Width="*"/>

                                                <DataGridTemplateColumn Header="{x:Static language:Lang.Global_Label_Status}" Width="150">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding StatusText}" 
                                                                       Foreground="{Binding StatusColor}" 
                                                                       FontFamily="{StaticResource BodyFont}" 
                                                                       FontSize="25" FontWeight="Bold" Width="150"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTemplateColumn Width="150">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Content="{x:Static language:Lang.Global_Button_Remove}" 
                                                                    Style="{StaticResource HardButtonStyle}"
                                                                    FontSize="30" Height="45" Width="115" 
                                                                    Foreground="{StaticResource AccentForegroundColor}"
                                                                    Click="ButtonRemoveFriend_Click" Tag="{Binding Username}"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Border>
                                </Grid>
                            </TabItem>

                            <TabItem Header="{x:Static language:Lang.Friends_Label_Requests}"
                                     FontSize="30" Style="{StaticResource TabItemStyle}">

                                <Grid Margin="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                        <GroupBox Header="{x:Static language:Lang.Friends_Label_AddFriend}" 
                                                  FontFamily="{StaticResource BodyFont}" FontSize="30" FontWeight="Bold"
                                                  Foreground="{StaticResource AccentForegroundColor}"
                                                  BorderBrush="{StaticResource AccentForegroundColor}"
                                                  Padding="20">
                                            <StackPanel>
                                                <Label Content="{x:Static language:Lang.Friends_Label_EnterUsername}" 
                                                       Style="{StaticResource RegisterLabelStyle}" HorizontalAlignment="Left"
                                                       FontSize="28"
                                                       Foreground="{StaticResource AccentForegroundColor}"/>
                                                
                                                <TextBox x:Name="TextBoxSearchUser" HorizontalAlignment="Stretch"
                                                         Width="500" Height="45" FontSize="28"
                                                         Style="{StaticResource RegisterTextBoxStyle}" Margin="0,5,0,15"/>

                                                <Button x:Name="ButtonSendRequest" 
                                                        Content="{x:Static language:Lang.Friends_Button_SendRequest}" 
                                                        Style="{StaticResource SendButtonStyle}"
                                                        HorizontalAlignment="Right" Width="160"
                                                        Click="ButtonSendRequest_Click"/>
                                            </StackPanel>
                                        </GroupBox>
                                    </StackPanel>

                                    <GroupBox Grid.Column="1" Header="{x:Static language:Lang.Friends_Label_PendingRequests}" 
                                              FontFamily="{StaticResource BodyFont}" FontSize="30" FontWeight="Bold"
                                              Foreground="{StaticResource AccentForegroundColor}"
                                              BorderBrush="{StaticResource AccentForegroundColor}"
                                              Padding="10">

                                        <ListView x:Name="ListViewRequests" 
                                                  Background="Transparent" 
                                                  BorderThickness="0" 
                                                  d:ItemsSource="{d:SampleData ItemCount=5}">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#10000000" CornerRadius="10" Margin="0,5" Padding="10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Border Grid.Column="0" Width="70" Height="70" CornerRadius="15" Margin="0,0,15,0" 
                                                                    BorderBrush="{StaticResource AccentColor}" BorderThickness="1">
                                                                <Border.Background>
                                                                    <ImageBrush ImageSource="{Binding AvatarImage}" Stretch="UniformToFill"/>
                                                                </Border.Background>
                                                            </Border>

                                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding SenderUsername}" 
                                                                           FontFamily="{StaticResource BodyFont}" 
                                                                           FontSize="30" FontWeight="Bold" 
                                                                           VerticalAlignment="Center" 
                                                                           Foreground="{StaticResource AccentForegroundColor}"/>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                                <Button Content="{x:Static language:Lang.Global_Button_Accept}" 
                                                                        Click="ButtonAcceptRequest_Click" 
                                                                        Tag="{Binding RequestId}"
                                                                        Style="{StaticResource EasyButtonStyle}" 
                                                                        Margin="25,0"
                                                                        Width="110" Height="50" FontSize="18"/>

                                                                <Button Content="{x:Static language:Lang.Global_Button_Reject}" 
                                                                        Click="ButtonDeclineRequest_Click" 
                                                                        Tag="{Binding RequestId}"
                                                                        Style="{StaticResource HardButtonStyle}" 
                                                                        Margin="5,0"
                                                                        Width="110" Height="50" FontSize="18"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </GroupBox>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Border>

                <Button Grid.Row="2"
                        Content="{x:Static language:Lang.Global_Button_Back}" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        VerticalAlignment="Top" HorizontalAlignment="Center"
                        Margin="0,0,0,30"
                        Click="ButtonBack_Click"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>